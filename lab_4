# Pisici sub 1 an
corespondenta_pui = {
    1: "6 luni",
    2: "10 luni",
    3: "2 ani",
    4: "5 ani",
    5: "8 ani",
    6: "14 ani",
    7: "15 ani",
    8: "16 ani",
    9: "16 ani",
    10: "17 ani",
    11: "17 ani"
}

raspuns = input("\nPisica are mai puÈ›in de un an? (Da/Nu): ").strip().lower()

if raspuns in ['da', 'yes']:
    while True:
        try:
            luni = int(input("CÃ¢te luni are pisicul? [1-11]: "))
            if luni < 1 or luni > 11:
                print("âš ï¸ VÃ¢rsta trebuie sÄƒ fie Ã®ntre 1 È™i 11 luni.")
                continue
            break
        except:
            print("âš ï¸ IntroduceÈ›i un numÄƒr Ã®ntreg.")
    print(f" Pisicul are echivalentul a {corespondenta_pui[luni]} Ã®n ani omeneÈ™ti.")
else:
    while True:
        try:
            ani = int(input("CÃ¢È›i ani are pisica dvs.? [1-35]: "))
            if ani < 1 or ani >= 35:
                print("âš ï¸ IntroduceÈ›i o vÃ¢rstÄƒ Ã®ntre 1 È™i 34.")
                continue
            break
        except:
            print("âš ï¸ IntroduceÈ›i un numÄƒr Ã®ntreg valid.")
    
    if ani == 1:
        echiv = 18
    elif ani == 2:
        echiv = 25
    elif 3 <= ani <= 15:
        echiv = 25 + (ani - 2) * 4
    else:
        echiv = 25 + (13 * 4) + (ani - 15) * 3  # de la anul 16 Ã®n sus

    print(f" Pisica dvs. are echivalentul a {echiv} ani umani.")
