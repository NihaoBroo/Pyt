
def calcul_greutate_ideala(inaltime, varsta, sex):
    if sex.upper() == 'M':
        return inaltime - 100 - ((inaltime - 150) / 4 + (varsta - 20) / 4)
    elif sex.upper() == 'F':
        return inaltime - 100 - ((inaltime - 150) / 2.5 + (varsta - 20) / 6)


# ÃnÄƒlÈ›ime
while True:
    inaltime_input = input("IntroduceÈ›i Ã®nÄƒlÈ›imea (cm) [150-220]: ")
    try:
        inaltime = int(inaltime_input)
    except ValueError:
        print(" IntroduceÈ›i un numÄƒr valid.")
        continue
    if inaltime < 150 or inaltime > 220:
        print(" ÃnÄƒlÈ›imea trebuie sÄƒ fie Ã®ntre 150 È™i 220 cm.")
        continue
    break

# Greutate
while True:
    greutate_input = input("IntroduceÈ›i greutatea dvs. (kg) [45-300]: ")
    try:
        greutate = float(greutate_input)
    except ValueError:
        print(" IntroduceÈ›i un numÄƒr valid.")
        continue
    if greutate < 45 or greutate > 300:
        print(" Greutatea trebuie sÄƒ fie Ã®ntre 45 È™i 300 kg.")
        continue
    break

# VÃ¢rstÄƒ
while True:
    varsta_input = input("IntroduceÈ›i vÃ¢rsta (ani) [21-119]: ")
    try:
        varsta = int(varsta_input)
    except ValueError:
        print(" IntroduceÈ›i un numÄƒr valid.")
        continue
    if varsta < 21 or varsta > 119:
        print(" VÃ¢rsta trebuie sÄƒ fie Ã®ntre 21 È™i 119 ani.")
        continue
    break

# Sex
while True:
    sex = input("IntroduceÈ›i sexul (M sau F): ").strip().upper()
    if sex not in ['M', 'F']:
        print(" Sexul trebuie sÄƒ fie M sau F.")
        continue
    break

greutate_ideala = calcul_greutate_ideala(inaltime, varsta, sex)
diferenta = greutate - greutate_ideala

print(f"\nğŸ“ Greutatea idealÄƒ pentru dvs. este: {greutate_ideala:.2f} kg.")

if diferenta > 0:
    print("ğŸ“£ Trebuie sÄƒ slÄƒbiÈ›i {:.2f} kg.".format(diferenta))
elif diferenta < 0:
    print("ğŸ“£ Trebuie sÄƒ adÄƒugaÈ›i Ã®n greutate {:.2f} kg.".format(abs(diferenta)))
else:
    print("âœ… AveÈ›i greutatea idealÄƒ!")

